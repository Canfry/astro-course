---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Main from '../../components/Main.astro';
import H1 from '../../components/H1.astro';
import { Image, getImage } from 'astro:assets';
import TableOfContent from '../../components/tableOfContent.astro';
import Share from '../../components/Share.astro';

export const getStaticPaths = async () => {
  const posts = await getCollection('posts');

  const paths = posts.map((post) => {
    return {
      params: {
        slug: post.slug,
      },
      props: {
        post,
      },
    };
  });
  return paths;
};

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { Content, headings } = await post.render();
const coverImageSource = (await getImage({ src: post.data.image })).src;
---

<Layout
  title={post.data.title}
  description={post.data.description}
  image={coverImageSource}
>
  <Main>
    <a href='/blog' class='text-zinc-500 text-2xl mb-16 underline block'
      >&larr; Back to all blogs</a
    >
    <H1 text={post.data.title} />
    <Image
      src={post.data.image}
      alt={post.data.title}
      width={1024}
      height={1024}
      class='rounded-2xl shadow-xl mb-28 aspect-thumbnail object-cover'
    />
    <div class='mb-10'>
      <TableOfContent headings={headings} />
    </div>
    <div class='relative'>
      <div class='prose prose-2xl overflow-visible relative'>
        <Content />
      </div>
      <Share post={post} />
    </div>
  </Main>
</Layout>
